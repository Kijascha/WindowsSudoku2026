<UserControl x:Class="WindowsSudoku2026.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsSudoku2026.Views" xmlns:viewmodels="clr-namespace:WindowsSudoku2026.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MenuViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="{DynamicResource AccentBrush}" FontSize="24" Margin="30" Text="Welcome to the Sudoku 2026 App for Windows!" />
            <Button Width="200" Height="40" Content="Play" Style="{DynamicResource CommonButtonStyle}" FontSize="18" Margin="5" Command="{Binding GoToPlayMenuCommand}"/>
            <Button Width="200" Height="40" Content="Create" Style="{DynamicResource CommonButtonStyle}" FontSize="18" Margin="5" Command="{Binding GoToCreateCommand}"/>
            <Button Width="200" Height="40" Content="Help" Style="{DynamicResource CommonButtonStyle}" FontSize="18" Margin="5"/>
            <Button Width="200" Height="40" Content="Settings" Style="{DynamicResource CommonButtonStyle}" FontSize="18" Margin="5" Command="{Binding GoToSettingsCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
