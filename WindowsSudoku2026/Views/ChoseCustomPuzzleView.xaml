<UserControl x:Class="WindowsSudoku2026.Views.ChoseCustomPuzzleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsSudoku2026.Views" 
             xmlns:dto="clr-namespace:WindowsSudoku2026.Common.DTO;assembly=WindowsSudoku2026.Common"
             xmlns:converters="clr-namespace:WindowsSudoku2026.Core.Converters;assembly=WindowsSudoku2026.Core"
             xmlns:viewmodels="clr-namespace:WindowsSudoku2026.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ChooseCustomPuzzleViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource AccentBrush}">
    <UserControl.Resources>
        <converters:TicksToTimeSpanConverter x:Key="TicksToTimeSpanConverter" />
        <converters:PlayButtonTextConverter x:Key="PlayButtonTextConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BestTimeConverter x:Key="BestTimeConverter" />
        <Style x:Key="ExpandableListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="#777" />
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bg" 
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1" 
                                Margin="3" 
                                MinHeight="80" 
                                Height="Auto"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch">
                            <ContentPresenter SnapsToDevicePixels="True" 
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#888" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="RootGrid" SizeChanged="RootGrid_SizeChanged">

        <!-- Danach dein normales Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="SelectionStackPanel" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Foreground="White" FontSize="24" Margin="30 30" Text="Choose you Custom Puzzle!" />
            <ListBox x:Name="SelectionListBox" MinWidth="450" MaxWidth="700" Height="705"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     ItemsSource="{Binding Puzzles}" 
                     SelectedItem="{Binding SelectedPuzzle, Mode=TwoWay}">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ExpandableListBoxItem}">
                        <!-- Setze die Werte hart, damit das fehlerhafte Binding ignoriert wird -->
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type dto:PuzzleDTO}">
                        <Expander x:Name="ExpanderItem" Style="{DynamicResource PuzzleSelectionExpanderStyle}"
                                  Focusable="False"
                                  MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                  IsExpanded="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}">
                            <Expander.Header>
                                <Grid Focusable="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="10 0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="24" VerticalAlignment="Center" />
                                        <!--This file is NOT compatible with Silverlight-->
                                        <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                                                 Visibility="{Binding IsSolved, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Margin="10 0"
                                                 Stretch="Uniform" Width="24" Height="24">
                                            <Canvas Name="checkSolved" Width="640" Height="640">
                                                <Canvas.RenderTransform>
                                                    <TranslateTransform X="0" Y="0"/>
                                                </Canvas.RenderTransform>
                                                <Canvas.Resources/>
                                                <!--Unknown tag: sodipodi:namedview-->
                                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="checkSolvedPath" Fill="LawnGreen">
                                                    <Path.Data>
                                                        <PathGeometry Figures="M530.8 134.1C545.1 144.5 548.3 164.5 537.9 178.8L281.9 530.8C276.4 538.4 267.9 543.1 258.5 543.9C249.1 544.7 240 541.2 233.4 534.6L105.4 406.6C92.9 394.1 92.9 373.8 105.4 361.3C117.9 348.8 138.2 348.8 150.7 361.3L252.2 462.8L486.2 141.1C496.6 126.8 516.6 123.6 530.9 134z" FillRule="NonZero"/>
                                                    </Path.Data>
                                                </Path>
                                            </Canvas>
                                        </Viewbox>
                                    </StackPanel>
                                    <Button Grid.Column="1" HorizontalAlignment="Right" 
                                            Margin="20 0" Focusable="False" 
                                            Width="24" Height="24" 
                                            Background="Transparent" 
                                            BorderBrush="Transparent" 
                                            BorderThickness="0"
                                            Command="{Binding Path=DataContext.DeleteSelectedPuzzleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="deletePuzzleFrame" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                                    <!--This file is NOT compatible with Silverlight-->
                                                    <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform">
                                                        <Canvas Name="deletePuzzle" Width="640" Height="640">
                                                            <Canvas.RenderTransform>
                                                                <TranslateTransform X="0" Y="0"/>
                                                            </Canvas.RenderTransform>
                                                            <Canvas.Resources/>
                                                            <!--Unknown tag: sodipodi:namedview-->
                                                            <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="deletePuzzlePath" Fill="#fff">
                                                                <Path.Data>
                                                                    <PathGeometry Figures="M232.7 69.9C237.1 56.8 249.3 48 263.1 48L377 48C390.8 48 403 56.8 407.4 69.9L416 96L512 96C529.7 96 544 110.3 544 128C544 145.7 529.7 160 512 160L128 160C110.3 160 96 145.7 96 128C96 110.3 110.3 96 128 96L224 96L232.7 69.9zM128 208L512 208L512 512C512 547.3 483.3 576 448 576L192 576C156.7 576 128 547.3 128 512L128 208zM216 272C202.7 272 192 282.7 192 296L192 488C192 501.3 202.7 512 216 512C229.3 512 240 501.3 240 488L240 296C240 282.7 229.3 272 216 272zM320 272C306.7 272 296 282.7 296 296L296 488C296 501.3 306.7 512 320 512C333.3 512 344 501.3 344 488L344 296C344 282.7 333.3 272 320 272zM424 272C410.7 272 400 282.7 400 296L400 488C400 501.3 410.7 512 424 512C437.3 512 448 501.3 448 488L448 296C448 282.7 437.3 272 424 272z" FillRule="NonZero"/>
                                                                </Path.Data>
                                                            </Path>
                                                        </Canvas>
                                                    </Viewbox>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="deletePuzzlePath" Property="Fill" Value="{DynamicResource AccentBrush}" />
                                                    </Trigger>
                                                    <!-- Kleiner Bonus: Feedback beim Klicken -->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="deletePuzzlePath" Property="Opacity" Value="0.5" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Expander.Header>
                            <StackPanel x:Name="ExpanderItemContent" Orientation="Vertical" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Center"  ScrollViewer.CanContentScroll="False">
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0">
                                    <Image Source="{Binding PreviewImage, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="300" />
                                </Border>
                                <Border>
                                    <StackPanel Width="300">
                                        <TextBlock Text="Best Time" FontSize="20" 
                                                   Margin="0 10 0 0" 
                                                   Foreground="White" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" />
                                        <TextBlock FontSize="16" 
                                                   HorizontalAlignment="Center" 
                                                   Margin="0 0 0 10" 
                                                   Foreground="White">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource BestTimeConverter}">
                                                    <Binding Path="TimeSpentTicks" />
                                                    <Binding Path="IsSolved" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Button Width="250" FontSize="18" 
                                                Style="{DynamicResource CommonButtonStyle}" 
                                                Command="{Binding Path=DataContext.GoToPlayPuzzleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <Button.Content>
                                                <MultiBinding Converter="{StaticResource PlayButtonTextConverter}">
                                                    <Binding Path="TimeSpentTicks" />
                                                    <Binding Path="IsSolved" />
                                                </MultiBinding>
                                            </Button.Content>
                                        </Button>
                                        <Button Content="New" Width="250" FontSize="18" 
                                                Style="{DynamicResource CommonButtonStyle}"
                                                Visibility="{Binding Path=DataContext.HasPuzzleProgress, 
                                            RelativeSource={RelativeSource AncestorType=UserControl},
                                            Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Command="{Binding Path=DataContext.ResetPuzzleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                        <Button Content="Cancel" Width="250" FontSize="18" Style="{DynamicResource CommonButtonStyle}" 
                                                Command="{Binding Path=DataContext.ClearSelectionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>
                        <DataTemplate.Triggers>
                            <Trigger SourceName="ExpanderItem" Property="MaxWidth" Value="700">
                                <Setter TargetName="ExpanderItemContent" Property="Orientation" Value="Horizontal"/>
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>        
    </Grid>
</UserControl>
