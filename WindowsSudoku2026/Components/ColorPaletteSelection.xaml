<UserControl x:Class="WindowsSudoku2026.Components.ColorPaletteSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsSudoku2026.Components"
             xmlns:components="clr-namespace:WindowsSudoku2026.Components"
             xmlns:converters="clr-namespace:WindowsSudoku2026.Core.Converters;assembly=WindowsSudoku2026.Core" 
             xmlns:viewmodels="clr-namespace:WindowsSudoku2026.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ColorPaletteSelectionViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <converters:EnumEqualsMultiConverter x:Key="EnumEqualsMultiConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:MultiColorToBrushConverterV2 x:Key="MultiColorToBrushConverter" />
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <components:ColorPicker />
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Apply" Style="{DynamicResource CommonButtonStyle}" Height="40" Padding="10" Margin="5" Command="{Binding ApplyColorCommand}" />
                <Button Content="New" Style="{DynamicResource CommonButtonStyle}" Height="40" Padding="10" Margin="5" Command="{Binding NewPaletteCommand}" />
                <Button Content="Update" Style="{DynamicResource CommonButtonStyle}" IsEnabled="{Binding IsDirty}" Height="40" Padding="10" Margin="5" Command="{Binding UpdatePaletteCommand}" />
                <Button Content="Delete" Style="{DynamicResource CommonButtonStyle}" Height="40" Padding="10" Margin="5"  Command="{Binding DeletePaletteCommand}"/>
                <ComboBox Width="150" Height="40"
                          Margin="5" 
                          ItemsSource="{Binding AvailablePalettes}"
                          SelectedItem="{Binding SelectedPalette}"
                          IsSynchronizedWithCurrentItem="False">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Id}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <ListBox Width="275" ItemsSource="{Binding ActiveColorPalette.SudokuColors, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     SelectedItem="{Binding SelectedColor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     BorderThickness="0"
                     Background="Transparent"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="3" Columns="3"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <RadioButton Style="{DynamicResource SelectColorButton}"
                                                 IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}}">
                                        <Border Width="84"
                                    Height="84">
                                            <Border.Background>
                                                <MultiBinding Converter="{StaticResource MultiColorToBrushConverter}" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding Path="Key" />
                                                    <Binding Path="DataContext.ActiveColorPalette" UpdateSourceTrigger="PropertyChanged" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                </MultiBinding>
                                            </Border.Background>
                                        </Border>
                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
