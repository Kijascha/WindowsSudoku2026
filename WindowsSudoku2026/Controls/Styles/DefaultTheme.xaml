                                     Value="Digits">
                            <Setter TargetName="ContentPresenter"
                                    Property="TextElement.FontSize"
                                    Value="28"/>
                        </DataTrigger>                        
                        
                        <DataTrigger Binding="{Binding SelectedInputActionType}"
                                    Value="CenterCandidates">
                            <Setter TargetName="ContentPresenter"
                                    Property="TextElement.FontSize"
