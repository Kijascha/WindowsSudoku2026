                                            Value="CornerCandidates"/>
                                <Condition Binding="{Binding Content, RelativeSource={RelativeSource Self}}"
                                            Value="7"/>
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="ContentPresenter"
                                    Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="-12" Y="-12"/>
                                </Setter.Value>
                            </Setter>
                        </MultiDataTrigger>

                        <!-- 8 = oben -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding SelectedInputActionType}"
                                            Value="CornerCandidates"/>
                                <Condition Binding="{Binding Content, RelativeSource={RelativeSource Self}}"
                                            Value="8"/>
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="ContentPresenter"
                                    Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="0" Y="-12"/>
                                </Setter.Value>
                            </Setter>
                        </MultiDataTrigger>

                        <!-- 9 = oben rechts -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding SelectedInputActionType}"
                                            Value="CornerCandidates"/>
                                <Condition Binding="{Binding Content, RelativeSource={RelativeSource Self}}"
                                            Value="9"/>
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="ContentPresenter"
                                    Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="12" Y="-12"/>
                                </Setter.Value>
                            </Setter>
                        </MultiDataTrigger>

                        <DataTrigger Binding="{Binding SelectedInputActionType}"
                                     Value="Colors">
                            <Setter TargetName="InnerBorder"
                                    Property="Background">
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource DataContextToBrushConverter}" UpdateSourceTrigger="PropertyChanged">
                                        <Binding RelativeSource="{RelativeSource AncestorType=Button}" Path="Content"/>
                                        <Binding Path="DataContext.ActivePalette.SudokuColors" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        <!-- Palette als Triggerquelle -->
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type UserControl}}" Path="DataContext.ActivePalette" UpdateSourceTrigger="PropertyChanged" />
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
